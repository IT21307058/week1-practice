{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0"
  },
  "paths": {
    "/posts/{id}": {
      "delete": {
        "summary": "Deletes a specific post by its ID.",
        "tags": [
          "Posts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Post successfully deleted.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Post successfully deleted."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Authentication required.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized: Access token is missing or invalid."
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - User does not have permission to delete this post.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Forbidden: You do not have permission to delete this post."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Post with the specified ID does not exist.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Post not found."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Retrieve the authenticated user's profile",
        "tags": [
          "Authentication"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successfully retrieved authenticated user's profile.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string",
                              "description": "Unique identifier of the user."
                            },
                            "name": {
                              "type": "string",
                              "description": "Name of the user."
                            },
                            "email": {
                              "type": "string",
                              "format": "email",
                              "description": "Email address of the user."
                            },
                            "role": {
                              "type": "string",
                              "description": "Role of the user (e.g., 'user', 'admin')."
                            },
                            "createdAt": {
                              "type": "string",
                              "format": "date-time",
                              "description": "Timestamp when the user account was created."
                            },
                            "updatedAt": {
                              "type": "string",
                              "format": "date-time",
                              "description": "Timestamp when the user account was last updated."
                            }
                          },
                          "required": [
                            "id",
                            "name",
                            "email",
                            "role",
                            "createdAt",
                            "updatedAt"
                          ]
                        }
                      },
                      "required": [
                        "user"
                      ]
                    }
                  },
                  "required": [
                    "status",
                    "data"
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - No valid authentication token provided or token expired.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Unauthorized: Please log in to get access."
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Something went wrong!"
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/posts/": {
      "get": {
        "summary": "Retrieve a list of all posts",
        "tags": [
          "Posts"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successfully retrieved posts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid",
                        "description": "Unique identifier for the post."
                      },
                      "title": {
                        "type": "string",
                        "description": "Title of the post."
                      },
                      "content": {
                        "type": "string",
                        "description": "Body content of the post."
                      },
                      "authorId": {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID of the user who authored the post."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the post was created."
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the post was last updated."
                      }
                    },
                    "required": [
                      "id",
                      "title",
                      "content",
                      "authorId",
                      "createdAt",
                      "updatedAt"
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Something went wrong."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/test": {
      "get": {
        "summary": "Test endpoint for demonstrating basic API connectivity.",
        "tags": [
          "Posts",
          "Utility"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Test endpoint successfully reached.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "A confirmation message from the test endpoint."
                    },
                    "status": {
                      "type": "string",
                      "description": "Indicates the success status of the test."
                    }
                  },
                  "example": {
                    "message": "Test endpoint hit successfully!",
                    "status": "success"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/": {
      "get": {
        "summary": "Retrieve a list of all users.",
        "tags": [
          "Users"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "A successful response with a list of users.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid",
                        "description": "Unique identifier for the user."
                      },
                      "name": {
                        "type": "string",
                        "description": "Full name of the user."
                      },
                      "email": {
                        "type": "string",
                        "format": "email",
                        "description": "Email address of the user."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the user account was created."
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "email",
                      "createdAt"
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Something went wrong on the server."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new user account",
        "tags": [
          "Users"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "username",
                  "email",
                  "password"
                ],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "A unique username for the new user.",
                    "example": "john_doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "A unique email address for the new user.",
                    "example": "john.doe@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "minLength": 8,
                    "description": "The password for the new user. Must be at least 8 characters long.",
                    "example": "StrongP@ssw0rd!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User account created successfully."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "userId": {
                          "type": "string",
                          "format": "uuid",
                          "description": "The unique identifier of the newly created user."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input or missing required fields",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Missing required fields: username, email, password."
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflict, e.g., username or email already exists",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "A user with this email or username already exists."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "An unexpected error occurred."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Authenticate a user and generate an access token.",
        "tags": [
          "Auth"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "The user's password."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful. Returns an authentication token and user information.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "The JWT authentication token for subsequent requests."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "The user's unique identifier."
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "description": "The user's email address."
                        },
                        "name": {
                          "type": "string",
                          "nullable": true,
                          "description": "The user's name, if available."
                        }
                      },
                      "description": "Basic information about the logged-in user."
                    }
                  },
                  "required": [
                    "token",
                    "user"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. Missing required fields or invalid input format.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email and password are required."
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Invalid credentials provided (e.g., incorrect email or password).",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid email or password."
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register a new user account",
        "tags": [
          "Authentication"
        ],
        "parameters": [],
        "responses": {
          "201": {
            "description": "User successfully registered and created.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User registered successfully!"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "description": "Unique identifier for the user."
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "description": "The user's email address."
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Timestamp when the user account was created."
                        }
                      },
                      "required": [
                        "id",
                        "email",
                        "createdAt"
                      ]
                    },
                    "token": {
                      "type": "string",
                      "description": "JWT authentication token for the newly registered user.",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjEyMyIsImlhdCI6MTY3ODkwNTYwMCwiZXhwIjoxNjc4OTE2NDAwfQ.S0mejwtTokenString"
                    }
                  },
                  "required": [
                    "status",
                    "message",
                    "user",
                    "token"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data or missing required fields.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Validation failed: Email is required."
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          },
          "409": {
            "description": "User with given email or username already exists.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "User with this email already exists."
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/posts/upload": {
      "post": {
        "summary": "Uploads a new post by attaching a single file.",
        "tags": [
          "Posts"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to upload for the post (e.g., image, video, document)."
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post uploaded successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success",
                      "description": "Indicates the status of the operation."
                    },
                    "message": {
                      "type": "string",
                      "example": "File uploaded and post created successfully.",
                      "description": "A descriptive success message."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "postId": {
                          "type": "string",
                          "format": "uuid",
                          "description": "Unique identifier of the newly created post."
                        },
                        "fileUrl": {
                          "type": "string",
                          "format": "uri",
                          "description": "URL to the uploaded file."
                        },
                        "uploadedAt": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Timestamp when the post was uploaded."
                        }
                      },
                      "required": [
                        "postId",
                        "fileUrl",
                        "uploadedAt"
                      ]
                    }
                  },
                  "required": [
                    "status",
                    "message",
                    "data"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. This typically occurs if no file is provided or if there's an issue with the file upload.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "No file uploaded or invalid request format."
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error. An unexpected error occurred on the server.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "An internal server error occurred."
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}
  }
}