    "/auth/login": {
      "post": {
        "summary": "Logs in a user and returns an authentication token.",
        "tags": [
          "Auth"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "The user's password."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful. Returns an authentication token and user information.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "token": {
                      "type": "string",
                      "description": "JWT authentication token."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "description": "The ID of the logged-in user."
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "description": "The email of the logged-in user."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. Missing required fields in the request body.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email and password are required."
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized. Invalid email or password.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid email or password."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register a new user account.",
        "tags": [
          "Authentication"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's unique email address.",
                    "example": "new.user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "The user's chosen password. Should be strong (e.g., min 8 chars, mixed case, numbers, symbols).",
                    "minLength": 8,
                    "example": "MySuperSecureP@ssw0rd!"
                  },
                  "username": {
                    "type": "string",
                    "description": "An optional username for the user. If not provided, one might be generated or the email could be used.",
                    "minLength": 3,
                    "example": "newuser123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User successfully registered.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "A success message indicating the user was registered.",
                      "example": "User registered successfully."
                    },
                    "user": {
                      "type": "object",
                      "description": "Details of the newly registered user.",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "description": "The unique identifier of the user.",
                          "example": "a1b2c3d4-e5f6-7890-1234-567890abcdef"
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "description": "The email address of the user.",
                          "example": "new.user@example.com"
                        },
                        "username": {
                          "type": "string",
                          "description": "The username of the user (if provided during registration).",
                          "example": "newuser123"
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Timestamp of when the user account was created.",
                          "example": "2023-10-27T10:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request. The request body contains invalid or missing data (e.g., email already exists, invalid password format, missing required fields).",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "A descriptive error message.",
                      "example": "This email is already registered."
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "Optional array of specific validation error details.",
                      "example": [
                        "Password must be at least 8 characters long",
                        "Email format is invalid"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/upload": {
      "post": {
        "summary": "Upload a new post with an associated file.",
        "tags": [
          "Posts"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to upload (e.g., image, document)."
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully and post created/updated.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success",
                      "description": "Status of the operation."
                    },
                    "message": {
                      "type": "string",
                      "example": "File uploaded successfully.",
                      "description": "A descriptive success message."
                    },
                    "fileId": {
                      "type": "string",
                      "description": "Unique identifier for the uploaded file.",
                      "example": "654321abcdef"
                    },
                    "fileName": {
                      "type": "string",
                      "description": "Original name of the uploaded file.",
                      "example": "my-cool-image.jpg"
                    },
                    "fileUrl": {
                      "type": "string",
                      "format": "url",
                      "description": "URL where the uploaded file can be accessed.",
                      "example": "https://api.example.com/uploads/654321abcdef.jpg"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - No file provided or invalid file format/size.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error",
                      "description": "Status of the operation."
                    },
                    "message": {
                      "type": "string",
                      "example": "No file uploaded or invalid file type.",
                      "description": "Error message detailing the reason for the bad request."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error - Something went wrong on the server.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Failed to process the upload due to a server error."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
