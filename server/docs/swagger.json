{
  "openapi": "3.0.0",
  "info": {
    "title": "My API",
    "version": "1.0.0"
  },
  "paths": {
    "/posts/{id}": {
      "delete": {
        "summary": "Deletes a post by its ID.",
        "tags": [
          "Posts"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Post deleted successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Post deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized: Access token is missing or invalid"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Forbidden: You do not have permission to delete this post"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Post not found.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Post not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "summary": "Get current user's profile information",
        "tags": [
          "Authentication",
          "Users"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successfully retrieved current user's profile.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "description": "Unique identifier of the user"
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "description": "Email address of the user"
                    },
                    "name": {
                      "type": "string",
                      "description": "Full name of the user"
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Timestamp when the user account was created"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Timestamp when the user account was last updated"
                    }
                  },
                  "required": [
                    "id",
                    "email",
                    "name",
                    "createdAt",
                    "updatedAt"
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - No authentication token provided or token is invalid.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unauthorized: Access token is missing or invalid."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/": {
      "get": {
        "summary": "Retrieve a list of all posts.",
        "tags": [
          "Posts"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successfully retrieved posts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "Unique identifier of the post."
                      },
                      "title": {
                        "type": "string",
                        "description": "Title of the post."
                      },
                      "content": {
                        "type": "string",
                        "description": "Full content of the post."
                      },
                      "authorId": {
                        "type": "string",
                        "description": "ID of the user who authored the post."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the post was created."
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the post was last updated."
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "An unexpected error occurred."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/test": {
      "get": {
        "summary": "Retrieve basic test data or status from the endpoint.",
        "tags": [
          "Posts"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "Successfully retrieved test data or endpoint status.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Test endpoint is operational."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Something went wrong on the server."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/": {
      "get": {
        "summary": "Retrieve a list of all users.",
        "tags": [
          "Users"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "A list of user objects.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "description": "The unique identifier of the user."
                      },
                      "name": {
                        "type": "string",
                        "description": "The name of the user."
                      },
                      "email": {
                        "type": "string",
                        "format": "email",
                        "description": "The email address of the user."
                      },
                      "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The date and time when the user was created."
                      },
                      "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The date and time when the user was last updated."
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "email",
                      "createdAt",
                      "updatedAt"
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Something went wrong."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new user",
        "tags": [
          "Users"
        ],
        "parameters": [],
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User created successfully"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "format": "uuid",
                          "description": "Unique identifier of the user"
                        },
                        "name": {
                          "type": "string",
                          "description": "Full name of the user"
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "description": "Email address of the user"
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "description": "Timestamp of user creation"
                        }
                      },
                      "required": [
                        "id",
                        "name",
                        "email",
                        "createdAt"
                      ]
                    }
                  },
                  "required": [
                    "status",
                    "message",
                    "user"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid input provided",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid data provided (e.g., email missing or invalid format)"
                    }
                  },
                  "required": [
                    "status",
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Log in an existing user and receive an authentication token.",
        "tags": [
          "Authentication"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "minLength": 6,
                    "description": "The user's password."
                  }
                },
                "example": {
                  "email": "user@example.com",
                  "password": "Password123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "description": "A JWT (JSON Web Token) for authenticating subsequent requests."
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "The ID of the logged-in user."
                        },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "description": "The email of the logged-in user."
                        },
                        "name": {
                          "type": "string",
                          "description": "The name of the logged-in user (if available)."
                        }
                      },
                      "example": {
                        "id": "60d0fe4f5ae121000f089f2a",
                        "email": "user@example.com",
                        "name": "John Doe"
                      }
                    }
                  },
                  "example": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYwZDBmZTRmNWFlMTIxMDAwZjA4OWYyYSIsImlhdCI6MTYyNDEwMjM2NywiZXhwIjoxNjI0MTA1OTY3fQ.signature_here",
                    "user": {
                      "id": "60d0fe4f5ae121000f089f2a",
                      "email": "user@example.com",
                      "name": "John Doe"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Missing required fields or invalid input format.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Email is required"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid email or password.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Invalid email or password"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "summary": "Register a new user account. Note: Request and response schemas are based on common patterns for registration endpoints, as the specific controller code was not provided for inference.",
        "tags": [
          "Authentication"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password",
                  "passwordConfirm"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "User's full name",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "User's email address (must be unique)",
                    "example": "john.doe@example.com"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "minLength": 8,
                    "description": "User's password (minimum 8 characters)",
                    "example": "mysecretpassword123"
                  },
                  "passwordConfirm": {
                    "type": "string",
                    "format": "password",
                    "minLength": 8,
                    "description": "Confirm user's password; must match the 'password' field",
                    "example": "mysecretpassword123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "User registered successfully"
                    },
                    "token": {
                      "type": "string",
                      "description": "Authentication token for the newly registered user",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYwZWY1ZjBmMTIzNDU2Nzg5MGFiY2RlZiIsImlhdCI6MTYyNjYzNTc5MCwiZXhwIjoxNjI3MjQwNTkwfQ...."
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string",
                              "description": "Unique identifier of the registered user",
                              "example": "60ef5f0f1234567890abcdef"
                            },
                            "name": {
                              "type": "string",
                              "example": "John Doe"
                            },
                            "email": {
                              "type": "string",
                              "format": "email",
                              "example": "john.doe@example.com"
                            },
                            "createdAt": {
                              "type": "string",
                              "format": "date-time",
                              "example": "2023-10-27T10:00:00.000Z"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request due to invalid input, missing fields, or email already in use",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "fail"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email address is already registered."
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "field": {
                            "type": "string",
                            "example": "passwordConfirm"
                          },
                          "message": {
                            "type": "string",
                            "example": "Passwords do not match."
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/upload": {
      "post": {
        "summary": "Upload a new post, including a file and optional metadata.",
        "tags": [
          "Posts"
        ],
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "file"
                ],
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "The file to upload for the post. This is handled by `multer.single('file')`."
                  },
                  "title": {
                    "type": "string",
                    "description": "Optional title for the post. (Cannot be inferred as required without controller code).",
                    "maxLength": 255
                  },
                  "description": {
                    "type": "string",
                    "description": "Optional detailed description of the post. (Cannot be inferred as required without controller code)."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post uploaded successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "description": "The unique identifier of the newly created post."
                    },
                    "title": {
                      "type": "string",
                      "description": "The title of the uploaded post (if provided)."
                    },
                    "fileUrl": {
                      "type": "string",
                      "format": "uri",
                      "description": "The URL where the uploaded file can be accessed."
                    },
                    "message": {
                      "type": "string",
                      "description": "A confirmation message upon successful upload."
                    }
                  },
                  "required": [
                    "id",
                    "fileUrl",
                    "message"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - The request was malformed, or missing the required file.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Error message detailing the bad request (e.g., 'No file uploaded')."
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error - An unexpected error occurred on the server during the upload process.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Generic server error message."
                    }
                  },
                  "required": [
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {}
  }
}