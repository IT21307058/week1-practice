{
  "id": "login",
  "method": "post",
  "path": "/auth/login",
  "summary": "Authenticate a user and generate an access token.",
  "tags": [
    "Auth"
  ],
  "security": [],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": [
            "email",
            "password"
          ],
          "properties": {
            "email": {
              "type": "string",
              "format": "email",
              "description": "The user's email address."
            },
            "password": {
              "type": "string",
              "format": "password",
              "description": "The user's password."
            }
          }
        }
      }
    }
  },
  "responses": {
    "200": {
      "description": "Login successful. Returns an authentication token and user information.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "description": "The JWT authentication token for subsequent requests."
              },
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "The user's unique identifier."
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                  },
                  "name": {
                    "type": "string",
                    "nullable": true,
                    "description": "The user's name, if available."
                  }
                },
                "description": "Basic information about the logged-in user."
              }
            },
            "required": [
              "token",
              "user"
            ]
          }
        }
      }
    },
    "400": {
      "description": "Bad Request. Missing required fields or invalid input format.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Email and password are required."
              }
            },
            "required": [
              "message"
            ]
          }
        }
      }
    },
    "401": {
      "description": "Unauthorized. Invalid credentials provided (e.g., incorrect email or password).",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Invalid email or password."
              }
            },
            "required": [
              "message"
            ]
          }
        }
      }
    }
  }
}