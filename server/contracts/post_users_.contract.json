{
  "id": "createNewUser",
  "method": "post",
  "path": "/users/",
  "summary": "Create a new user",
  "tags": [
    "Users"
  ],
  "security": [],
  "requestBody": null,
  "responses": {
    "201": {
      "description": "User created successfully",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "success"
              },
              "message": {
                "type": "string",
                "example": "User created successfully"
              },
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier of the user"
                  },
                  "name": {
                    "type": "string",
                    "description": "Full name of the user"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email address of the user"
                  },
                  "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp of user creation"
                  }
                },
                "required": [
                  "id",
                  "name",
                  "email",
                  "createdAt"
                ]
              }
            },
            "required": [
              "status",
              "message",
              "user"
            ]
          }
        }
      }
    },
    "400": {
      "description": "Bad Request - Invalid input provided",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "fail"
              },
              "message": {
                "type": "string",
                "example": "Invalid data provided (e.g., email missing or invalid format)"
              }
            },
            "required": [
              "status",
              "message"
            ]
          }
        }
      }
    }
  }
}