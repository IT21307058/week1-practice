{
  "id": "uploadPost",
  "method": "post",
  "path": "/posts/upload",
  "summary": "Upload a new post, including a file and optional metadata.",
  "tags": [
    "Posts"
  ],
  "security": [],
  "requestBody": {
    "required": true,
    "content": {
      "multipart/form-data": {
        "schema": {
          "type": "object",
          "required": [
            "file"
          ],
          "properties": {
            "file": {
              "type": "string",
              "format": "binary",
              "description": "The file to upload for the post. This is handled by `multer.single('file')`."
            },
            "title": {
              "type": "string",
              "description": "Optional title for the post. (Cannot be inferred as required without controller code).",
              "maxLength": 255
            },
            "description": {
              "type": "string",
              "description": "Optional detailed description of the post. (Cannot be inferred as required without controller code)."
            }
          }
        }
      }
    }
  },
  "responses": {
    "201": {
      "description": "Post uploaded successfully.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid",
                "description": "The unique identifier of the newly created post."
              },
              "title": {
                "type": "string",
                "description": "The title of the uploaded post (if provided)."
              },
              "fileUrl": {
                "type": "string",
                "format": "uri",
                "description": "The URL where the uploaded file can be accessed."
              },
              "message": {
                "type": "string",
                "description": "A confirmation message upon successful upload."
              }
            },
            "required": [
              "id",
              "fileUrl",
              "message"
            ]
          }
        }
      }
    },
    "400": {
      "description": "Bad Request - The request was malformed, or missing the required file.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "description": "Error message detailing the bad request (e.g., 'No file uploaded')."
              }
            },
            "required": [
              "message"
            ]
          }
        }
      }
    },
    "500": {
      "description": "Internal Server Error - An unexpected error occurred on the server during the upload process.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "description": "Generic server error message."
              }
            },
            "required": [
              "message"
            ]
          }
        }
      }
    }
  }
}