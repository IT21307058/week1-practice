{
  "id": "uploadPost",
  "method": "post",
  "path": "/posts/upload",
  "summary": "Uploads a single file (e.g., an image or document) to the server.",
  "tags": [
    "Posts"
  ],
  "security": [],
  "requestBody": null,
  "responses": {
    "201": {
      "description": "File uploaded successfully.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "success"
              },
              "message": {
                "type": "string",
                "example": "File uploaded successfully."
              },
              "data": {
                "type": "object",
                "properties": {
                  "fileId": {
                    "type": "string",
                    "description": "Unique identifier for the uploaded file.",
                    "example": "65e234c9c1f6d3b7e8a9d0c1"
                  },
                  "filename": {
                    "type": "string",
                    "description": "The original name of the uploaded file.",
                    "example": "my_image.jpg"
                  },
                  "mimetype": {
                    "type": "string",
                    "description": "The MIME type of the uploaded file.",
                    "example": "image/jpeg"
                  },
                  "size": {
                    "type": "number",
                    "description": "The size of the uploaded file in bytes.",
                    "example": 123456
                  },
                  "url": {
                    "type": "string",
                    "description": "URL to access the uploaded file.",
                    "example": "http://example.com/uploads/65e234c9c1f6d3b7e8a9d0c1.jpg"
                  }
                }
              }
            },
            "required": [
              "status",
              "message",
              "data"
            ]
          }
        }
      }
    },
    "400": {
      "description": "Bad Request. No file provided or an issue with the upload.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "fail"
              },
              "message": {
                "type": "string",
                "example": "No file uploaded or unsupported file type."
              }
            },
            "required": [
              "status",
              "message"
            ]
          }
        }
      }
    },
    "500": {
      "description": "Internal Server Error.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "error"
              },
              "message": {
                "type": "string",
                "example": "An unexpected error occurred during file upload."
              }
            },
            "required": [
              "status",
              "message"
            ]
          }
        }
      }
    }
  }
}