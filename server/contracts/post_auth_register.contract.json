{
  "id": "register",
  "method": "post",
  "path": "/auth/register",
  "summary": "Register a new user account",
  "tags": [
    "Authentication"
  ],
  "security": [],
  "requestBody": {
    "required": true,
    "content": {
      "application/json": {
        "schema": {
          "type": "object",
          "required": [
            "email",
            "password"
          ],
          "properties": {
            "email": {
              "type": "string",
              "format": "email",
              "description": "The user's email address.",
              "example": "user@example.com"
            },
            "password": {
              "type": "string",
              "format": "password",
              "description": "The user's chosen password.",
              "minLength": 6,
              "example": "MyStrongPassword123"
            },
            "name": {
              "type": "string",
              "description": "The user's full name (optional).",
              "example": "John Doe"
            }
          }
        }
      }
    }
  },
  "responses": {
    "201": {
      "description": "User successfully registered.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "User registered successfully!"
              },
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "6543210fedcba98765432109"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2023-10-27T10:00:00.000Z"
                  }
                }
              }
            }
          }
        }
      }
    },
    "400": {
      "description": "Bad Request - Invalid input or missing required fields.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "Email and password are required."
              }
            }
          }
        }
      }
    },
    "409": {
      "description": "Conflict - User with this email already exists.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "example": "User with 'user@example.com' already exists."
              }
            }
          }
        }
      }
    }
  }
}