{
  "id": "registerUser",
  "method": "post",
  "path": "/auth/register",
  "summary": "Register a new user account",
  "tags": [
    "Authentication"
  ],
  "security": [],
  "requestBody": null,
  "responses": {
    "201": {
      "description": "User successfully registered and created.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "success"
              },
              "message": {
                "type": "string",
                "example": "User registered successfully!"
              },
              "user": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "Unique identifier for the user."
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                  },
                  "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Timestamp when the user account was created."
                  }
                },
                "required": [
                  "id",
                  "email",
                  "createdAt"
                ]
              },
              "token": {
                "type": "string",
                "description": "JWT authentication token for the newly registered user.",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjEyMyIsImlhdCI6MTY3ODkwNTYwMCwiZXhwIjoxNjc4OTE2NDAwfQ.S0mejwtTokenString"
              }
            },
            "required": [
              "status",
              "message",
              "user",
              "token"
            ]
          }
        }
      }
    },
    "400": {
      "description": "Invalid input data or missing required fields.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "error"
              },
              "message": {
                "type": "string",
                "example": "Validation failed: Email is required."
              }
            },
            "required": [
              "status",
              "message"
            ]
          }
        }
      }
    },
    "409": {
      "description": "User with given email or username already exists.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "error"
              },
              "message": {
                "type": "string",
                "example": "User with this email already exists."
              }
            },
            "required": [
              "status",
              "message"
            ]
          }
        }
      }
    }
  }
}